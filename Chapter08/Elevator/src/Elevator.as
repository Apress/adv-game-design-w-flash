ata);                break;                                case ELEVATOR:                 _elevatorModel                     = new TileModel                    (                      MAX_TILE_SIZE,                      tileSheetColumn, tileSheetRow,         	            mapRow, mapColumn,         	            64, 32                    );                  _elevatorModel.friction = 1;                    _elevatorModel.vy = -2;          	        drawGameObject        	          (_elevatorModel, _foregroundBitmapData);                break;              }          }        }      }    }				private function drawGameObject		  (		    tileModel:TileModel, 		    screen:BitmapData		  ):void		{		  var sourceRectangle:Rectangle = new Rectangle  			(  		    tileModel.tileSheetColumn * MAX_TILE_SIZE,   			  tileModel.tileSheetRow * MAX_TILE_SIZE,   			  tileModel.width,   			  tileModel.height  			);					  	  var destinationPoint:Point = new Point      (        tileModel.xPos,         tileModel.yPos      );            screen.copyPixels        (          _tileSheetBitmapData,           sourceRectangle,           destinationPoint,          null, null, true        );	  }	}}