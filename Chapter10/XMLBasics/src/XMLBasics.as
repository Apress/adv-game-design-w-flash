tem" + "\n");           var quizItemChildren:XMLList = quiz.quizItem.children();     for each (var quizItemChild:XML in quizItemChildren)      {       trace(quizItemChild);     }          trace("\n" + "---------------------------------" + "\n");           //18. Display only the names of the elements that are children     //of quizItem          trace("18. Display only the names of the elements that are children of quizItem" + "\n");           var quizItemChildren:XMLList = quiz.quizItem.children();     for each (var quizItemChild:XML in quizItemChildren)      {       trace(quizItemChild.name());     }          trace("\n" + "---------------------------------" + "\n");           //19. Display only the questions          trace("19. Display only the questions" + "\n");           var quizItemChildren:XMLList = quiz.quizItem.children();     for each (var quizItemChild:XML in quizItemChildren)      {       if(quizItemChild.name() == "question")       {         trace(quizItemChild);       }     }          trace("\n" + "---------------------------------" + "\n");           //Searching for information          //20. Display quizItem elements that match the search term          trace("20. Display quizItem elements that match the search term" + "\n");           var questionList:XMLList        = quiz.quizItem.(question == "What was the first video game?");     trace(questionList);          trace("\n" + "---------------------------------" + "\n");           //21. Just display the question that matches the search term          trace("21. Just display the question that matches the search term" + "\n");           var questionList:XMLList        = quiz.quizItem.(question == "What was the first video game?").question;     trace(questionList);          trace("\n" + "---------------------------------" + "\n");           //22. Find the quizItem in which answerA has a value of 10 points          trace("22. Find the quizItem in which answerA has a value of 10 points" + "\n");           var pointsList:XMLList        = quiz.quizItem.(answerA.@points == "10");     trace(pointsList);          trace("\n" + "---------------------------------" + "\n");           //23. Find the actual answer that matches the point value          trace("23. Find the actual answer that matches the point value" + "\n");           var pointsList:XMLList        = quiz.quizItem.(answerA.@points == "10").answerA;     trace(pointsList);          trace("\n" + "---------------------------------" + "\n");            //24. Find the correct answer to 'What was the first video game?'          trace("24. Find the correct answer to 'What was the first video game?'" + "\n");           var questionList:XMLList        = quiz.quizItem.(question == "What was the first video game?");          var quizItemChildren:XMLList = questionList.children();     for each (var quizItemChild:XML in quizItemChildren)      {       if(quizItemChild.@points == "10")       {         trace(quizItemChild);       }     }          trace("\n" + "---------------------------------" + "\n");          }	}}