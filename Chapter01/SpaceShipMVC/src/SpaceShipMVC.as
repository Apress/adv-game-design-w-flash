package {	import flash.events.Event;	import flash.display.Sprite;	import spaceShip.*;	import starField.*;	import map.MapView;	import com.friendsofed.utils.StageBoundaries;	public class SpaceShipMVC extends Sprite	{		private var _model:ShipModel;		private var _shipView:ShipView;		private var _controller:ShipController;		private var _starField:StarFieldView;		private var _map:MapView;				public function SpaceShipMVC()		{			_model = new ShipModel();						_starField = new StarFieldView(_model);			addChild(_starField);						_map = new MapView(_model);			addChild(_map);						_controller = new ShipController(_model);			_shipView = new ShipView(_model, _controller);			addChild(_shipView);						_model.setX = 275;			_model.setY = 200;						addEventListener(Event.ENTER_FRAME,enterFrameHandler);		}				private function enterFrameHandler(event:Event):void		{			_model.update();			StageBoundaries.wrap(_model, stage);		}	}}