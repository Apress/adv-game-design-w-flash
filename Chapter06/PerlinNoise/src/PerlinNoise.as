package{	import flash.events.Event;  import flash.display.*;  [SWF(width="550", height="400",   backgroundColor="#FFFFFF", frameRate="60")]  	public class PerlinNoise extends Sprite	{		public function PerlinNoise():void		{ 		  //Create a Perlin Noise effect		  		  //1. Create a random "seed" number to start the pattern		  var seed:Number = Math.floor(Math.random() * 10);		  		  //2. Determine what colors channels you want to use.       var channels:uint         = BitmapDataChannel.BLUE | BitmapDataChannel.RED;            //3. Create a blank BitmapData to contain the noise      var pattern:BitmapData         = new BitmapData(300, 300, false, 0x00CCCCCC);            //4. Use the perlinNoise method to create the noise      //based on the seed and color channels      pattern.perlinNoise        (100, 80, 6, seed, false, true, channels, false, null);			      //5. Create a rectangle and fill it with the perlinNoise pattern      var rectangle:Shape = new Shape();      rectangle.graphics.beginBitmapFill(pattern);      rectangle.graphics.drawRect(0, 0, 300, 300);      rectangle.graphics.endFill();      addChild(rectangle);            rectangle.x = 125;      rectangle.y = 50;		}	}}