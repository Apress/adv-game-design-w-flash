package com.friendsofed.vector{		import flash.display.Shape;	import flash.display.Sprite;	public class VectorUtils extends Sprite{		public function VectorUtils(){		}		//Screen wrapping		static public function plotVector(vx:Number, vy:Number):void 		{			//Draw a line representing the main vector			var mainVectorLine:Shape = new Shape();			mainVectorLine.graphics.clear();			mainVectorLine.graphics.lineStyle(1, 0x000000, 1);			mainVectorLine.graphics.moveTo(0, 0); 			mainVectorLine.graphics.lineTo(vx, vy);			addChild(mainVectorLine);		}	}}