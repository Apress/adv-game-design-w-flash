package com.friendsofed.gameElements.spaceShip{	import flash.events.KeyboardEvent;	import flash.ui.Keyboard;	public class ShipController 	{		//Variables		private var _model:Object;		public function ShipController(model:ShipModel):void 		{			//Initialize variables			_model = model;		}		public function processKeyDown(event:KeyboardEvent):void		{			switch (event.keyCode)			{			  case Keyboard.LEFT:			    _model.rotationSpeed = -10;			    break;			    			  case Keyboard.RIGHT:			    _model.rotationSpeed = 10;			    break;			    			  case Keyboard.UP:  			  _model.acceleration = 0.2;    			_model.friction = 1;    			_model.thrusterFired = true;  			  break;  			    			case Keyboard.SPACE:  			  if (! _model.shotFired)    			{    				_model.shotFired = true;    			}  			  break;			}		}				public function processKeyUp(event:KeyboardEvent):void  	{  		switch (event.keyCode)			{			  case Keyboard.LEFT:			    _model.rotationSpeed = 0;			    break;			    			  case Keyboard.RIGHT:			    _model.rotationSpeed = 0;			    break;			    			  case Keyboard.UP:  			  _model.acceleration = 0;    			_model.friction = _model.frictionConstant;    			_model.thrusterFired = false;  			  break;  			    			case Keyboard.SPACE:  			  _model.shotFired = false;  			  break;			}  	}	}}