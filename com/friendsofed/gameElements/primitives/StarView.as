package com.friendsofed.gameElements.primitives{	import flash.display.Shape;	import flash.display.Sprite;	import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.geom.Matrix;	public class StarView extends AVerletView	{		public function StarView(model:StarModel):void		{		  super(model);		}		override protected function draw():void		{		  //Create a new Vector object for the drawing coordinates			var starCoordinates:Vector.<Number> = new Vector.<Number>();						//Push the coordinates into the starCoordinates Vector			starCoordinates.push(30,0, 35,15, 50,10, 45,25, 60,30, 45,35, 50,50, 35,45, 30,60, 25,45, 10,50, 15,35, 0,30, 15,25, 10,10, 25,15, 30,0);						//Create a Vector object for the drawing commands			var starCommands:Vector.<int> = new Vector.<int>(); 						//1 = moveTo(), 2 = lineTo(), 3 = curveTo()			starCommands.push(1,2,2,2,2,2,2,2,2,2,2,2,2,2,2,2,2);						//Create the starShape object and draw it.			var starShape:Shape = new Shape();			starShape.graphics.lineStyle();			starShape.graphics.beginFill(model.color);						//Use the drawPath command to draw the shape using the starCommands and starCoordinates Vectors			starShape.graphics.drawPath(starCommands, starCoordinates);			starShape.graphics.endFill();						//Scale the star to the model's height and width			starShape.width = model.width;			starShape.height = model.height;						//starShape.x = starShape.x - model.width / 2;			//starShape.y = starShape.y - model.height / 2;									//Position the star in the center of the sprite			//starShape.x = starShape.x - model.width / 2;			//starShape.y = starShape.y - model.height / 2;			//addChild(starShape);						/*			var starBitmapData:BitmapData = new BitmapData(model.width, model.height, true, 0);			starBitmapData.draw(starShape, new Matrix(1, 0, 0, 1, model.width / 2, model.height / 2));			var starBitmap:Bitmap = new Bitmap(starBitmapData);			addChild(starBitmap);			*/			var starSprite:Sprite = new Sprite();			starSprite.addChild(starShape);						//BitmapData(width, height, transparent?, fillColor(0 is alpha))			var starBitmapData:BitmapData = new BitmapData(model.width, model.height, false, 0x000000);			starBitmapData.draw(starSprite, new Matrix());			var starBitmap:Bitmap = new Bitmap(starBitmapData);			addChild(starBitmap);			starBitmap.x = starBitmap.x - model.width / 2;			starBitmap.y = starBitmap.y - model.height / 2;					}	}}