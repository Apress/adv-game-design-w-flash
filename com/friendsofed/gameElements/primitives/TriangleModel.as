package com.friendsofed.gameElements.primitives{	import flash.events.Event;	import flash.events.EventDispatcher;	import com.friendsofed.vector.*;	public class TriangleModel extends AVerletModel	{	  private var _halfWidth:Number;	  private var _halfHeight:Number;	  private var _inclination:String;	  private var _color:uint;	  		public function TriangleModel(width:uint = 30, height:uint = 30, inclination:String = "right", color:uint = 0x3B3E4D):void 		{		  this.width = width;		  this.height = height;		  _halfWidth = width / 2;		  _halfHeight = height / 2;		  this._inclination = inclination;		  this.color = color;		  		}		public function get inclination():String		{		  return _inclination;	  }		//hypotenuse		public function get hypotenuse():VectorModel		{		  var hypotenuse:VectorModel = new VectorModel		  if(_inclination == "right")		  {		    hypotenuse.update(xPos - _halfWidth,  		                    yPos - _halfHeight,  		                    xPos + _halfWidth,   		                    yPos + _halfHeight);  		}  		else  		{  		   hypotenuse.update(xPos - _halfWidth,  		                     yPos + _halfHeight,  		                     xPos + _halfWidth,   		                     yPos - _halfHeight);  		}			return hypotenuse;		}	}}