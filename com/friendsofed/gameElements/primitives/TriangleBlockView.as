package com.friendsofed.gameElements.primitives{	import flash.display.Shape;	import flash.filters.*;	public class TriangleBlockView extends AVerletView	{		public function TriangleBlockView(model:TriangleModel):void		{		  super(model);		}		override protected function draw():void		{		  var shape:Shape = new Shape();		  //shape.graphics.lineStyle(1);		  //Right facing triangle		  if(model.inclination == "right")		  {			  shape.graphics.beginFill(model.color);			  shape.graphics.moveTo(0, 0);			  shape.graphics.lineTo(0, model.height);			  shape.graphics.lineTo(model.width, model.height);			  shape.graphics.lineTo(0, 0);			  shape.graphics.endFill();		  }		  else		  //Left facing triangle		  {		    shape.graphics.beginFill(model.color);			  shape.graphics.moveTo(model.width, 0);			  shape.graphics.lineTo(0, model.height);			  shape.graphics.lineTo(model.width, model.height);			  shape.graphics.moveTo(model.width, 0);			  shape.graphics.endFill();		  }		  		  //Add a bevel and drop shadow filters			var filters:Array = [];			filters = shape.filters;			filters.push(new BevelFilter(2, 135, 0xFFFFFF, 0.50, 			                     0x000000, 0.50, 2, 2));			filters.push(new DropShadowFilter(2, 135, 0x000000, 			                     0.35, 2, 2));			shape.filters = filters;						addChild(shape);						//Center the shape			shape.x -= model.width / 2;			shape.y -= model.height / 2;		}	}}