package com.friendsofed.gameElements.primitives{  import flash.display.Sprite;  import flash.events.Event;	import flash.events.KeyboardEvent;	import flash.ui.Keyboard;	import flash.events.MouseEvent;	public class UIPlatformView extends Sprite	{		private var _model:Object;		private var _controller:Object;		private var _stage:Object;		public function UIPlatformView		  (		    model:AVerletModel, 		    controller:UIPlatformController, 		    stage:Object		  ):void		{			this._model = model;		  this._controller = controller;		  this._stage = stage;		 /*			_stage.addEventListener			  (KeyboardEvent.KEY_DOWN,keyDownHandler);			_stage.addEventListener			  (KeyboardEvent.KEY_UP,keyUpHandler);			_stage.addEventListener 			*/			//Alternative mouse based control			 			_model.addEventListener			  ("update", updateHandler);			_stage.addEventListener			  (MouseEvent.MOUSE_DOWN, mouseDownHandler);			  		}		/*		private function keyDownHandler(event:KeyboardEvent):void		{			_controller.processKeyDown(event);		}		private function keyUpHandler(event:KeyboardEvent):void		{			_controller.processKeyUp(event);		}		*/				private function mouseDownHandler(event:MouseEvent):void  	{  		_controller.processMouseDown(event);  	}  	private function updateHandler(event:Event):void  	{  		_controller.processUpdate(_stage);  	}	}}