package com.friendsofed.gameElements.primitives{	import flash.events.KeyboardEvent;	import flash.ui.Keyboard;	import flash.events.MouseEvent;	public class UIController 	{	  private const EASING:Number = 0.1;		private var _model:Object;		private var _stage:Object;		public function UIController(model:CircleModel, stage:Object):void 		{			_model = model;			_stage = stage;		}		public function processKeyDown(event:KeyboardEvent):void		{		  _model.friction = 1;		  if(event.keyCode == Keyboard.LEFT)		  {		    _model.acceleration_X = -0.1;		  }		  if(event.keyCode == Keyboard.RIGHT)		  {		    _model.acceleration_X = 0.1;		  }		  if(event.keyCode == Keyboard.UP)		  {		    _model.acceleration_Y = -0.1;		  }		  if(event.keyCode == Keyboard.DOWN)		  {		    _model.acceleration_Y = 0.1;		  }		}				public function processKeyUp(event:KeyboardEvent):void  	{  	  if(event.keyCode == Keyboard.LEFT  	  ||(event.keyCode == Keyboard.RIGHT))		  {		    _model.acceleration_X = 0;		  }		  if(event.keyCode == Keyboard.UP  	  ||(event.keyCode == Keyboard.DOWN))		  {		    _model.acceleration_Y = 0;		  }  		_model.friction = _model.frictionConstant;		}		public function processMouseDown(event:MouseEvent):void  	{  	  //Calculate the distance from the object to the mouse			var vx:Number = _stage.mouseX - _model.xPos;			var vy:Number = _stage.mouseY - _model.yPos;			var distance:Number = Math.sqrt(vx * vx + vy * vy);						//Move the object if it is more than 1 pixel away from the mouse			if (distance >= 1)			{				_model.vx += (_stage.mouseX - _model.xPos) * EASING / 2;				_model.vy += (_stage.mouseY - _model.yPos) * EASING / 2;			}  	}	}}