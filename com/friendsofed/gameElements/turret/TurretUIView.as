package com.friendsofed.gameElements.turret{  import flash.display.Sprite;  	//Keyboard Events	import flash.events.Event;	import flash.events.KeyboardEvent;	import flash.ui.Keyboard;	import flash.events.MouseEvent;	import com.friendsofed.gameElements.primitives.*;	public class TurretUIView extends Sprite	{		private var _model:Object;		private var _controller:Object;		private var _stage:Object;		public function TurretUIView	    (	      model:AVerletModel, 	      controller:TurretUIController, 	      stage:Object	    ):void		{			this._model = model;		  this._controller = controller;		  this._stage = stage;					_stage.addEventListener			  (MouseEvent.MOUSE_DOWN, mouseDownHandler);			_stage.addEventListener(MouseEvent.MOUSE_UP, mouseUpHandler);						//Optionally, listen for "update" events from the model			//instead of MOUSE_MOVE events			//_model.addEventListener("update", updateHandler);						_stage.addEventListener			  (MouseEvent.MOUSE_MOVE, mouseMoveHandler);		}		private function mouseDownHandler(event:MouseEvent):void  	{  		_controller.processMouseDown(event);  	}  	private function mouseUpHandler(event:MouseEvent):void  	{  		_controller.processMouseUp(event);  	}  	  	private function mouseMoveHandler(event:MouseEvent):void  	{  		_controller.processMouseMove(_stage);  	}  	  	/*  	private function updateHandler(event:Event):void  	{trace("update");  		_controller.processUpdate(_stage);  	}  	*/	}}