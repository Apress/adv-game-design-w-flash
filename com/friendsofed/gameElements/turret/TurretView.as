package com.friendsofed.gameElements.turret{	import flash.display.*;	import flash.filters.*;	import flash.events.Event;	import com.friendsofed.gameElements.primitives.*;	public class TurretView extends AVerletView	{	  private var _turretShape:Shape = new Shape();	  		public function TurretView(model:AVerletModel):void		{		  super(model);		}		override protected function draw():void		{		  			//Draw the turret	    _turretShape.graphics.beginFill(0x000000);	    //Its middle center is at "0" and the rectangle is drawn towards the left	    //This aligns it accurately so that it rotates correctly			//_turretShape.graphics.drawRect(0,model.height / 2, -model.width, -model.height);			_turretShape.graphics.drawRect(0, model.height / 2, -model.width, -model.height);			_turretShape.graphics.endFill();			//Enclose the turret in a containing Sprite			addChild(_turretShape);						//Add a bevel and drop shadow filters						var filters:Array = [];			filters = _turretShape.filters;			filters.push(new BevelFilter(2, 135, 0xFFFFFF, 0.50, 			                     0x000000, 0.50, 2, 2));			filters.push(new DropShadowFilter(2, 135, 0x000000, 			                     0.35, 2, 2));			_turretShape.filters = filters;									//Center the shape			//turretShape.x -= model.width / 2;			//turretShape.y -= model.height / 2;		}		override protected function changeHandler(event:Event):void		{		  //First call the default directives in AVerletView's changeHandler method			super.changeHandler(event);						_turretShape.rotation = model.angle  * 180 / Math.PI;		}	}}