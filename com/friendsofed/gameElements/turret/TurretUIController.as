package com.friendsofed.gameElements.turret{	import flash.events.KeyboardEvent;	import flash.ui.Keyboard;	import flash.events.MouseEvent;	import com.friendsofed.gameElements.primitives.*;	public class TurretUIController 	{	  private var _model:Object;		public function TurretUIController(model:AVerletModel):void 		{			_model = model;		}				internal function processMouseDown(event:MouseEvent):void  	{  	  if(_model.turretIsActive)  	  {  	    _model.fireBullet = true;	    }  	}  	internal function processMouseUp(event:MouseEvent):void  	{  	  //Not enabled  	}  	  	internal function processMouseMove(stage:Object):void  	{  	  var angle:Number   	    = Math.atan2  	    (  	      _model.yPos - stage.mouseY,   	      _model.xPos - stage.mouseX  	    );  	    	  //Constrain angle to the top of the lander  	  if(angle * 180 / Math.PI > _model.constrainLeft      || angle * 180 / Math.PI < _model.constrainRight)  	  {  	    _model.angle = angle;  	  }   	}  	  	/*  	internal function processUpdate(stage:Object):void  	{trace("process update");  	  var angle:Number   	    = Math.atan2  	    (  	      _model.yPos - stage.mouseY,   	      _model.xPos - stage.mouseX  	    );  	    	  //Constrain angle to the top of the lander  	  if(angle * 180 / Math.PI > _model.constrainLeft      || angle * 180 / Math.PI < _model.constrainRight)  	  {  	    _model.angle = angle;  	  }   	}  	*/	}}