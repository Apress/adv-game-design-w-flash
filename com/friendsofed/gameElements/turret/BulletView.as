package com.friendsofed.gameElements.turret{	import flash.display.Shape;	import flash.display.Sprite;	import com.friendsofed.gameElements.primitives.*;	import flash.filters.*;	public class BulletView extends AVerletView	{		public function BulletView(circleModel:CircleModel):void		{		  super(circleModel);		}		override protected function draw():void		{		  var shape:Shape = new Shape();		  shape.graphics.lineStyle(1);			shape.graphics.beginFill(model.color);			shape.graphics.drawCircle(0, 0, model.radius);			shape.graphics.endFill();			addChild(shape);						//Position the circle so that it's registration point is the upper			//left hand corner. This helps with bitmap collision			shape.x = shape.width / 2;			shape.y = shape.height / 2;		}	}}