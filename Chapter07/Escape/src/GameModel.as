package{	import flash.events.Event;	import flash.events.EventDispatcher;	import flash.display.*;	import com.friendsofed.gameElements.primitives.*;  public class GameModel extends EventDispatcher	{	   //Optional constants to define the game state	   //public const STATE_RUNNING:uint = 1;	   //public const STATE_OVER:uint = 2;	   	   //A variable that flags the end of the game	   public var gameOver:Boolean = false;	   	   //A variable to determine who won the game: 	   //the "player" or the "ufo"	   public var winner:String = "";	   	   //The GameModel needs references to the game objects  	 public var playerModel:Object;  	 public var playerView:Object;  	 public var ufoModel:Object;  	 public var ufoView:Object;  	 public var playersTurretModel:Object;  	 public var playersTurretView:Object;  	    	 //Arrays for the objects and enemies  	 public var fuelOrbModels:Array = [];  	 public var fuelOrbViews:Array = [];  	   	 public var cannonModels:Array = [];  	 public var cannonViews:Array = [];  	   	 public var turretModels:Array = [];  	 public var turretViews:Array = [];  	   	 public var bulletModels:Array = [];  	 public var bulletViews:Array = [];  	   	 public var ufoBulletModels:Array = [];  	 public var ufoBulletViews:Array = [];  	   	 public var explosions:Array = [];  	   	 //The game screen, which is visible on the stage.  	 //The GameController will add objects to this Sprite  	 //and the GameView will add it to the stage.  	 public var screen:Sprite = new Sprite();  	   	 //The cave's bitmap data  	 //The model will share this with the map's model  	 public var caveBitmapData:BitmapData;  	 public var caveBitmap:Bitmap;  	   	 //Game variables  	 private var _score:uint = 0;  	 public var maxScore:uint = 30;			public function GameModel():void 		{		}				public function update():void		{		  ///The game is over if the player or       //UFO’s fuel or shield      //values drop below zero		  if(playerModel.fuel <= 0		  || playerModel.shield <= 0		  || ufoModel.shield <= 0)		  {		    gameOver = true;		    		    if(ufoModel.shield <= 0)		    {		      winner = "player";		    }		    else		    {		      winner = "ufo";		    }		    		    //let the GameView know by dispatching a CHANGE event		    dispatchEvent(new Event(Event.CHANGE));		  }		}	}}