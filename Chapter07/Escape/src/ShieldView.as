package{	import flash.display.*;	import flash.events.Event;	import com.friendsofed.utils.*;		public class ShieldView extends Sprite	{		private var _gameModel:Object;		private var _stage:Object;		private var _meter:Shape = new Shape();		public function ShieldView(gameModel:Object)		{			_gameModel = gameModel;						//Add the change listner to the player object			_gameModel.playerModel.addEventListener			  (Event.CHANGE, changeHandler);						//Draw the meter			drawShieldMeter();		}		private function drawShieldMeter():void		{				//Create the meter			_meter.graphics.beginFill(0x3399FF);			_meter.graphics.drawRect(-2, -2, 100, 10);			_meter.graphics.endFill();			addChild(_meter);						//Create border      var border:Shape = new Shape()			border.graphics.lineStyle(1, 0x000000);			border.graphics.drawRect(-2, -2, 100, 10);			addChild(border);						//Add the text			var textBox:EasyText = new EasyText("player's shield", 10);			addChild(textBox);			textBox.y = -5;		}				private function changeHandler(event:Event):void		{		  if(_gameModel.playerModel.shield >= 0)		  {		    _meter.scaleX = _gameModel.playerModel.shield / 100;	    }		}	}}